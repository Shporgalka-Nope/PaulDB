<Window x:Class="DBPaulMain.AddRepairMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBPaulMain"
        mc:Ignorable="d"
        Title="AddRepairMan" Height="450" Width="200">
    <Grid>
        <DockPanel Margin="5">
            <Button Name="bt_save" Content="Save" DockPanel.Dock="Bottom" Click="bt_save_Click"/>
            <ListView Name="lv_repairMan" DockPanel.Dock="Top" SelectionChanged="lv_repairMan_SelectionChanged"/>
        </DockPanel>
    </Grid>
</Window>
